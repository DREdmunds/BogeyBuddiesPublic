@page "/"
@inject HttpClient Http

<h1>Weekly Scores</h1>

@if (_weeklyScores == null)
{
    <p><em>Loading...</em></p>
}
else
{
    @foreach (var score in _weeklyScores)
    {
        <p>@score.weekIdentifier - @score.netScore</p>
    }
}

@code {
    private IReadOnlyList<WeeklyScore> _weeklyScores;

    protected override async Task OnInitializedAsync()
    {
        _weeklyScores = await Http.GetFromJsonAsync<IReadOnlyList<WeeklyScore>>("http://localhost:7067/api/scores/user/user-001");
    }

    public class WeeklyScore
    {
        public string weekIdentifier { get; set; }
        public int netScore { get; set; }
        // Add other properties as needed
    }
}
